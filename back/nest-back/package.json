{
  "name": "nest-back",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d libs/database/src/data-source.ts",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d libs/database/src/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d libs/database/src/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d libs/database/src/data-source.ts",
    "build:api-gateway": "nest build apps/api-gateway",
    "build:user": "nest build apps/user",
    "build:course": "nest build apps/course",
    "build:schedule": "nest build apps/schedule",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "concurrently \"ts-node apps/api-gateway/src/main.ts --watch\" \"ts-node apps/user/src/main.ts --watch\" \"ts-node apps/course/src/main.ts --watch\" \"ts-node apps/schedule/src/main.ts --watch\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "typeorm-ts-node-commonjs migration:run -d libs/database/src/data-source.ts && node dist/main.js",
    "start:user": "ts-node apps/user/src/main.ts --watch",
    "start:api": "ts-node apps/api-gateway/src/main.ts --watch",
    "start:schedule": "ts-node apps/schedule/src/main.ts --watch",
    "start:course": "ts-node apps/course/src/main.ts --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:user": "cross-env NODE_ENV=test jest --config ./apps/user/test/jest-e2e.json",
    "test:schedule": "cross-env NODE_ENV=test jest --config ./apps/schedule/test/jest-e2e.json",
    "test:course": "cross-env NODE_ENV=test jest --config ./apps/course/test/jest-e2e.json",
    "test:api":" cross-env NODE_ENV=test jest --config ./apps/api-gateway/test/jest-e2e.json",
    "test:e2e": "jest --config ./apps/course/test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.12.2",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.8",
    "apollo-server-express": "^3.13.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "googleapis": "^150.0.1",
    "graphql": "^16.11.0",
    "groq-sdk": "^0.25.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.24"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/ai(|/.*)$": "<rootDir>/libs/ai/src/$1",
      "^@libs/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@libs/google-calendar(|/.*)$": "<rootDir>/libs/google-calendar/src/$1",
      "^@libs/graphql(|/.*)$": "<rootDir>/libs/graphql/src/$1"
    }
  }
}